<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".fragment_livros">

    <ScrollView
        android:id="@+id/TelaToda"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:scrollbars="none">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:id="@+id/edtPesquisar"
                android:layout_width="350dp"
                android:layout_height="49dp"
                android:clickable="true"
                android:drawableStart="?android:attr/actionModeWebSearchDrawable"
                android:drawablePadding="10sp"
                android:ems="10"
                android:hint="@string/Pesquisar"
                android:inputType="textPersonName"
                android:minHeight="48dp"
                android:paddingStart="10sp"
                android:textColorHint="#757575"
                android:textSize="18sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btnPesq"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="351dp"
                android:src="@drawable/iconsearchoff"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/edtPesquisar"
                app:layout_constraintTop_toTopOf="@+id/edtPesquisar" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_livros"
                style="@style/StyleRecyclerHome"
                android:layout_width="match_parent"
                android:layout_height="324dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/edtPesquisar"
                app:layout_constraintVertical_bias="0.0"
                tools:listitem="@layout/item_livro"
                tools:visibility="visible">


            </androidx.recyclerview.widget.RecyclerView>
        </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
</FrameLayout>